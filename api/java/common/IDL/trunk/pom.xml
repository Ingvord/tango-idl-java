<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>


	<groupId>org.tango</groupId>
	<artifactId>JavaTangoIDL</artifactId>
	<version>4.0.3-SNAPSHOT</version>
	<description>Java Tango IDL (compiled with jacorb IDL compiler, http://www.jacorb.org)</description>
	<inceptionYear>2004</inceptionYear>

	<developers>
		<developer>
			<id>verdier</id>
			<name>Pascal Verdier</name>
			<email>p.verdier@esrf.fr</email>
			<organization>ESRF</organization>
			<organizationUrl>http://www.ersf.eu</organizationUrl>
			<roles>
				<role>Java Developer</role>
			</roles>
			<timezone>1</timezone>
		</developer>
		<developer>
			<id>abeille</id>
			<name>Gwenaëlle Abeillé</name>
			<email>gwenaelle.abeille@synchrotron-soleil.fr</email>
			<organization>Synchrotron Soleil</organization>
			<organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
			<roles>
				<role>integrator</role>
			</roles>
			<timezone>1</timezone>
		</developer>
	</developers>

	<scm>
		<connection>scm:svn:https://svn.code.sf.net/p/tango-ds/code/api/java/common/IDL/trunk</connection>
		<developerConnection>scm:svn:https://abeilleg@svn.code.sf.net/p/tango-cs/code/api/java/common/IDL/trunk</developerConnection>
		<url>https://svn.code.sf.net/p/tango-ds/code/api/java/common/IDL/trunk</url>
	</scm>

	<properties>
		<maven.repositories.server>calypso</maven.repositories.server>
		<maven.repositories.home>/nexus/content/repositories</maven.repositories.home>

		<maven.web.server>calypso</maven.web.server>
		<maven.web.home>/usr/Local/apache/docs</maven.web.home>
	</properties>

	<distributionManagement>
		<repository>
			<uniqueVersion>false</uniqueVersion>
			<id>maven.repositories.server</id>
			<name>Java Releases</name>
			<url>http://${maven.repositories.server}${maven.repositories.home}/java-releases</url>
		</repository>
		<snapshotRepository>
			<id>maven.repositories.server</id>
			<name>Java Snapshots</name>
			<url>http://${maven.repositories.server}${maven.repositories.home}/java-snapshots</url>
		</snapshotRepository>
		<site>
			<id>maven.web.server</id>
			<name>Java Website</name>
			<url>scpexe://${maven.web.server}${maven.web.home}/java</url>
		</site>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>${project.build.sourceEncoding}</encoding>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<!-- <build> <plugins> <plugin> <groupId>com.mycila.maven-license-plugin</groupId> 
		<artifactId>maven-license-plugin</artifactId> <executions> <execution> <goals> 
		<goal>check</goal> </goals> </execution> </executions> <configuration> <header>src/main/template/header.txt</header> 
		<excludes> <exclude>**/*.txt</exclude> </excludes> <strictCheck>true</strictCheck> 
		<properties> <year>${project.inceptionYear}</year> </properties> </configuration> 
		</plugin> </plugins> </build> -->
	<dependencies>
		<dependency>
			<groupId>org.jacorb</groupId>
			<artifactId>jacorb</artifactId>
			<version>3.2</version>
			<exclusions>
				<exclusion>
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-jdk14</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-api</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
</project>
